{{#contentFor "styleadmin"}}
  <link rel="stylesheet" href="/css/users.css" />
{{/contentFor}}

<div class="main-content">
  <section class="section__status">
    <!-- Header -->
    <div class="section__inner-heading">
      <h1 class="section__heading">User information</h1>
      <div class="section__headeing-wrap--small">
        <div class="user-search-box">
          <i class="fa-solid fa-magnifying-glass"></i>
          <input type="text" placeholder="Search user..." />
        </div>
        <button
          id="delete-all-btn"
          type="button"
          class="section-item section-icon__trash"
          title="Delete selected orders or all"
          style="background: none; border: none; cursor: pointer; color: inherit;"
        >
          <i class="fa-solid fa-trash"></i>
        </button>
      </div>
    </div>

    <!-- Label - user list -->
    <div class="section__inner-label--other">
      <div class="section-item">
        <div class="section-item__check">
          <svg
            width="6"
            height="7"
            viewBox="0 0 6 7"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <g clip-path="url(#clip0_287_8843)">
              <path
                d="M0.673828 3.36328H4.71539"
                stroke="white"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </g>
            <defs>
              <clipPath id="clip0_287_8843">
                <rect width="5.38875" height="6.93388" fill="white" />
              </clipPath>
            </defs>
          </svg>
        </div>
        <label class="section-item__title">ID</label>
      </div>

      <div class="section-item">
        <i class="fa-solid fa-user"></i>
        <label class="section-item__title">Client</label>
      </div>

      <div class="section-item">
        <i class="fa-solid fa-phone"></i>
        <label class="section-item__title">Phone number</label>
      </div>

      <div class="section-item">
        <i class="fa-regular fa-file-lines"></i>
        <label class="section-item__title">Invoice</label>
      </div>

      <div class="section-item">
        <i class="fa-solid fa-location-dot"></i>
        <label class="section-item__title">Country</label>
      </div>

      <div class="section-item">
        <label class="section-item__title">Total</label>
      </div>

      <div class="section-item">
        <label class="section-item__title">Setting</label>
      </div>
    </div>

    <!-- ROWS Tá»ª DB -->
    {{#each users}}
      <div class="section__inner-label">
        <!-- ID -->
        <div class="section-item">
          <label
            for="section-checkbox-{{this.ID}}"
            class="section__custom-checkbox"
          >
<input
  type="checkbox"
  id="section-checkbox-{{this.ID}}"
  class="section-checkbox"
  name="user"
  value="{{this.ID}}"
/>
            <span
              class="section-checkmark section-item__title"
            >#{{this.ID}}</span>
          </label>
        </div>

        <!-- Client -->
        <div class="section-item section__info-wrap">
          <p
            class="section__info-name section-item__title clamp-text"
            style="--line-content: 1"
          >
            {{this.FirstName}}
            {{this.LastName}}
          </p>
          <p
            class="section__info-mail section-item__title clamp-text"
            style="--line-content: 1"
          >
            {{this.Email}}
          </p>
        </div>

        <!-- Phone -->
        <div class="section-item">
          <p class="section-item__date section-item__title">
            {{this.PhoneNumber}}
          </p>
        </div>

        <!-- Invoice count -->
        <div class="section-item">
          <p class="section-item__date section-item__title">
            {{this.TotalOrders}}
          </p>
        </div>

        <!-- Country / Region -->
        <div class="section-item">
          <p class="section-item__location section-item__title">
            {{#if this.Region}}{{this.Region}}{{else}}N/A{{/if}}
          </p>
        </div>

        <!-- Total spent -->
        <div class="section-item">
          <div class="section-item__total section-item__title">
            $
            {{this.TotalAmount}}
          </div>
        </div>

        <!-- Setting -->
<!-- Setting -->
<div class="section-item section-icon__trash">
  <form
    method="POST"
    action="/admin/users/{{this.ID}}/delete"
    style="display: inline;"
    onsubmit="return confirm('Are you sure you want to delete user #{{this.ID}}?')"
  >
    <button
      type="submit"
      style="background: none; border: none; cursor: pointer; color: #dc3545; padding: 0;"
    >
      <i class="fa-solid fa-trash"></i>
    </button>
  </form>
</div>

      </div>
    {{/each}}

    {{#unless users}}
      <div class="section__inner-label">
        <p style="text-align: center; padding: 20px; grid-column: 1 / -1;">
          No users found
        </p>
      </div>
    {{/unless}}
  </section>
</div>
{{#contentFor "scriptAdmin"}}
    <script src="/js/scriptAdmin.js"></script>
{{/contentFor}}
