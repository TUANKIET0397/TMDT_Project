{{#contentFor "styleAuth"}}
    <link rel="stylesheet" href="/css/register.css" />
{{/contentFor}}
{{! Register }}
    <div class="bg-animation" aria-hidden="true">
        <div class="color-blob blob1"></div>
        <div class="color-blob blob2"></div>
        <div class="color-blob blob3"></div>
        <div class="color-blob blob4"></div>
    </div>
    <div class="rgt_container">
        <div class="rgt_box">
            <h1 class="rgt_title">Register</h1>
            <form id="registerForm">
                <div class="rgt_info">
                    <input type="text" id="firstname" name="firstname" placeholder="First name" autocomplete="off" spellcheck="false" required>
                    <input type="text" id="lastname" name="lastname" placeholder="Last name" autocomplete="off" spellcheck="false" required>
                </div>
                
                <div class="rgt_info">
                    <select id="Gender" name="Gender" required>
                        <option value="" selected disabled>Gender</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select>
                    <input type="date" id="birthday" name="birthday" required>
                </div>

                <div class="rgt_info">
                    <input type="text" id="address" name="address" placeholder="Address" autocomplete="off" spellcheck="false" required>
                </div>

                <div class="rgt_info">
                    <input type="email" id="email" name="email" placeholder="Email" autocomplete="off" spellcheck="false" required>
                </div>

                <div class="rgt_info">
                    <input type="password" id="password" name="password" placeholder="Password" autocomplete="new-password" minlength="6" required>
                </div>
                
                <div class="rgt_info">
                    <input type="password" id="repassword" name="repassword" placeholder="Rewrite password" autocomplete="new-password" minlength="6" required>
                </div>

                <button type="submit" class="rgt-button">Register</button>
            </form>
        </div>
    </div>

    <script src="/js/register.js"></script>