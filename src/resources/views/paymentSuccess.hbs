<div class="payment-result payment-success">
    <div class="payment-result__container">
        <div class="payment-result__icon">
            <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
            >
                <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
        </div>

        <h1 class="payment-result__title">
            ‚úì
            {{#if (eq paymentType "momo")}}Payment successful!{{else}}Order
                successful!{{/if}}
        </h1>
        <p class="payment-result__message">
            Your order has been confirmed. Thank you for your purchase!
        </p>

        {{#if orderId}}
            <div class="payment-result__info">
                <p><strong>Order code:</strong> {{orderId}}</p>
                <p><strong>Time:</strong>
                    <span id="currentTime"></span></p>
                {{#if (eq paymentType "momo")}}
                    <p><strong>Status:</strong>
                        <span style="color: #10b981; font-weight: bold;">‚úì Paid</span></p>
                {{else}}
                    <p><strong> Paid:</strong>
                        <span style="color: #f97316; font-weight: bold;">‚úñ Not
                            yet paid</span></p>
                {{/if}}
            </div>
        {{/if}}
        <script>
            document.getElementById('currentTime').textContent = new
            Date().toLocaleString('vi-VN') // X√ìA GI·ªé H√ÄNG SAU KHI THANH TO√ÅN
            localStorage.removeItem('cart');
            sessionStorage.removeItem('pendingCartItem');
            sessionStorage.removeItem('openCartAfterLogin');

        </script>

        <div class="payment-result__actions">
            <a
                href="/"
                class="payment-result__btn payment-result__btn--primary"
            >‚Üê Continue shopping</a>
            <a
                href="/profile?tab=orders"
                class="payment-result__btn payment-result__btn--secondary"
            >View orders</a>
        </div>

        <div class="payment-result__notice">
            <p>üìß Order confirmation will be sent to your email within minutes.</p>
        </div>
    </div>
</div>