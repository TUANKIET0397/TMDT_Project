<script>
  const productId = '{{product.ID}}'
  const productName = '{{product.ProductName}}'
  const productPrice = {{product.Price}}
  const productImg = '{{product.ImgPath}}'
  let selectedSize = 'M'

  // Size selection
  document.querySelectorAll('.section__form-size').forEach(btn => {
    btn.addEventListener('click', function() {
      document.querySelectorAll('.section__form-size').forEach(b => b.classList.remove('active'))
      this.classList.add('active')
      selectedSize = this.dataset.size || 'M'
      document.getElementById('addToCartBtn').textContent = `ADD TO CART - ${selectedSize}`
    })
  })

  // Set M as default selected
  setTimeout(() => {
    document.querySelector('[data-size="M"]')?.classList.add('active')
  }, 100)

  // Add to cart
  function addToCartDetail() {
    if (!selectedSize) {
      alert('Please select a size')
      return
    }

    addToCart({
      id: productId,
      name: productName,
      price: productPrice,
      img: productImg,
      size: selectedSize,
      quantity: 1
    })
  }

  // Buy now
  document.getElementById('buyNowBtn')?.addEventListener('click', () => {
    addToCartDetail()
    setTimeout(() => window.location.href = '/checkout', 500)
  })
</script>