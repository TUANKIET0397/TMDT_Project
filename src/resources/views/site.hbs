<!-- NEW IN -->
<section class="best-seller">
    <h2>New in</h2>
    <small>Freshly added must-haves.</small>

    <div class="best-scroll">
        {{#each newProducts}}
            <div class="best-item">
                <div class="image-wrapper">
                    <span class="new-label">{{this.Badge}}</span>
