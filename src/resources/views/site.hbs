{{#contentFor "styles"}}
    <link rel="stylesheet" href="/css/home.css" />
{{/contentFor}}
{{! Home page }}

<!-- HERO SLIDER -->
<section class="hero">
    <h2 data-aos="slide-right">New arrivals</h2>
    <p data-aos="slide-right">
        Discover our meticulous curation of the finest pieces from the men's
        wardrobe around the world.
    </p>

    <div class="filters" data-aos="fade-right">
        <select>
            <option>Prices</option>
            {{#if minPrice}}
                <option>${{minPrice}} - ${{maxPrice}}</option>
            {{/if}}
        </select>
        <select>
            <option>Category</option>
            {{#each categories}}
                <option value="{{this.ID}}">{{this.TypeName}}
                    ({{this.ProductCount}})</option>
            {{/each}}
        </select>
        <select>
            <option>Size</option>
            {{#each sizes}}
                <option value="{{this.ID}}">{{this.SizeName}}</option>
            {{/each}}
        </select>
        <p>{{totalProducts}} products</p>
    </div>

    <div class="slider" data-aos="fade-up">
        <div class="slide-track">
            {{#each sliderImages}}
                <div class="slide">
                    <img src="./img/{{this.ImgPath}}" alt="{{this.Title}}" />
                    <div class="caption">
                        <h3>{{this.Title}}</h3>
                        <p>{{this.Description}}</p>
                    </div>
                </div>
            {{/each}}

            {{! Lặp lại để chạy vô tận }}
            {{#each sliderImages}}
                <div class="slide">
                    <img src="./img/{{this.ImgPath}}" alt="{{this.Title}}" />
                    <div class="caption">
                        <h3>{{this.Title}}</h3>
                        <p>{{this.Description}}</p>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>

<!-- CATEGORIES -->
<section class="categories">
    <h2 data-aos="slide-right">Our products</h2>
