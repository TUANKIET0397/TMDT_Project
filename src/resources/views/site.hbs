{{#contentFor "styles"}}
    <link rel="stylesheet" href="/css/home.css" />
{{/contentFor}}
{{! Home page }}

<!-- HERO SLIDER -->
<section class="hero">
    <h2 data-aos="slide-right">New arrivals</h2>
    <p data-aos="slide-right">
        Discover our meticulous curation of the finest pieces from the men's
        wardrobe around the world.
    </p>

    <div class="filters" data-aos="fade-right">
        <select>
            <option>Prices</option>
            {{#if minPrice}}
                <option>${{minPrice}} - ${{maxPrice}}</option>
            {{/if}}
        </select>
        <select>
            <option>Category</option>
            {{#each categories}}
                <option value="{{this.ID}}">{{this.TypeName}}
                    ({{this.ProductCount}})</option>
            {{/each}}
        </select>
        <select>
            <option>Size</option>
            {{#each sizes}}
                <option value="{{this.ID}}">{{this.SizeName}}</option>
            {{/each}}
        </select>
        <p>{{totalProducts}} products</p>
    </div>

    <div class="slider" data-aos="fade-up">
        <div class="slide-track">
            {{#each sliderImages}}
                <div class="slide">
                    <img src="./img/{{this.ImgPath}}" alt="{{this.Title}}" />
                    <div class="caption">
                        <h3>{{this.Title}}</h3>
                        <p>{{this.Description}}</p>
                    </div>
                </div>
            {{/each}}

            {{! Lặp lại để chạy vô tận }}
            {{#each sliderImages}}
                <div class="slide">
                    <img src="./img/{{this.ImgPath}}" alt="{{this.Title}}" />
                    <div class="caption">
                        <h3>{{this.Title}}</h3>
                        <p>{{this.Description}}</p>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>

<!-- CATEGORIES -->
<section class="categories">
    <h2 data-aos="slide-right">Our products</h2>
    <p data-aos="slide-right">
        A carefully curated collection bringing together the best of each
        category.
    </p>
    <div class="cat-grid">
        {{#each categories}}
            <div class="cat-item {{this.TypeName}}">
                <a href="/products?type={{this.ID}}">
                    <h3>{{this.TypeName}}</h3>
                    <p>{{this.ProductCount}} products</p>
                </a>
            </div>
        {{/each}}
    </div>
</section>

<section class="chunkky-section">
    <div class="chunkky-content">
        <h2 >chunkky tee<span class="tm">™</span></h2>
        <p >The first "made by shoppmall" 300GSM heavyweight t-shirt</p>
    </div>
</section>

<!-- CHUNKKY BANNER SECTION -->
<section class="chunkky-banner">
    <div class="banner-container">
        {{#each featuredProducts}}
            <div class="banner-item">
                <img src="/img/{{this.ImgPath}}" alt="{{this.ProductName}}" />
                <div class="banner-info">
                    <div class="left">
                        <h3>{{this.ProductName}}</h3>
                        <p class="sizes">{{this.AvailableSizes}}</p>
                    </div>
                    <div class="right">
                        <p class="price">${{this.Price}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</section>

<!-- BEST SELLER -->
<section class="best-seller">
    <h2 data-aos="slide-right">Best seller</h2>
    <small data-aos="slide-right">A curated selection of our top-selling products.</small>

    <div class="best-scroll">
        {{#each bestSellers}}
            <a href="/products/detail/{{this.ID}}" style="text-decoration: none; color: inherit; cursor: pointer;" class="best-item">
                <div class="image-wrapper">
                    <span class="new-label">BEST</span>
                    <img src="{{this.ImgPath}}" alt="{{this.ProductName}}" />
                    <div class="overlay-name">{{this.TypeName}}</div>
                </div>
                <div class="info" >
                    <p class="desc" data-aos="fade-up">{{this.ProductName}}</p>
                    <div class="bottom">
                        <p class="price" data-aos="fade-up">${{this.Price}}</p>
                        <button
                            class="buy-btn" data-aos="fade-left"
                        >Buy</button>
                    </div>
                </div>
            </a>
        {{/each}}
    </div>
</section>

<!-- CHANNELS -->
<section class="channels" >
    <div class="left"  data-aos="fade-right">
        <h2><em>Shoppmall Channels</em></h2>
        <p class="sub">Iconic pieces, spring stories.</p>

        <button class="social-btn insta" data-aos="zoom-in-up">
            <i class="fab fa-instagram"></i>
            Follow us on Instagram
        </button>

        <button class="social-btn tiktok" data-aos="zoom-in-up">
            <i class="fab fa-tiktok"></i>
            Follow us on TikTok
        </button>
    </div>

    <div class="videos" data-aos="fade-left" >
        <div class="video-card">
            <div class="video-thumb">
                <video src="/video/vid1.mp4" controls></video>
            </div>
            <p class="cap-vid">
                Dive into the history of the Miyuki-zoku, those suit-clad
                hoodlums who left their mark on Japan
            </p>
        </div>

        <div class="video-card">
            <div class="video-thumb">
                <video src="/video/vid2.mp4"controls></video>
            </div>
            <p class="cap-vid">
                From runway to reality: witness the iconic fashion trends that defined a generation.
            </p>
        </div>

        <div class="video-card">
            <div class="video-thumb">
                <video src="/video/vid3.mp4" controls></video>
            </div>
            <p class="cap-vid">
                Explore the evolution of streetwear and how it reshaped modern style worldwide.
            </p>
        </div>
    </div>
</section>

<!-- NEW IN -->
<section class="best-seller">
    <h2 data-aos="slide-right">New in</h2>
    <small data-aos="slide-right">Freshly added must-haves.</small>

    <div class="best-scroll">
        {{#each newProducts}}
            <a href="/products/detail/{{this.ID}}" style="text-decoration: none; color: inherit; cursor: pointer;" class="best-item" data-aos="fade-up">
                <div class="image-wrapper" >
                    <span class="new-label">{{this.Badge}}</span>
                    <img src="{{this.ImgPath}}" alt="{{this.ProductName}}" />
                    <div class="overlay-name">{{this.TypeName}}</div>
                </div>
                <div class="info">
                    <p class="desc"data-aos="fade-up">{{this.ProductName}}</p>
                    <div class="bottom">
                        <p class="price" data-aos="fade-up">${{this.Price}}</p>
                        <button
                            class="buy-btn" data-aos="fade-left"
                        >Buy</button>
                    </div>
                </div>
            </a>
        {{/each}}
    </div>
</section>

<!-- CHUNKKY BANNER SECTION 2 -->
<section class="chunkky-banner">
    <div class="banner-container">
        {{#each featuredProducts}}
            <div class="banner-item">
                <img src="/img/{{this.ImgPath}}" alt="{{this.ProductName}}" />
                <div class="banner-info">
                    <div class="left">
                        <h3>{{this.ProductName}}</h3>
                        <p class="sizes">{{this.AvailableSizes}}</p>
                    </div>
                    <div class="right">
                        <p class="price">${{this.Price}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</section>